<!-- LAYOUT -->
<div class="container clearfix">
  <div class="row">
    <div class="stage span10"><div class="runway"><div class="inner"></div></div></div>
    <div class="sidebar span6">
      <aside>
        <div id="account" class="clearfix">
          <span class="user"><i class="icon-user"></i> {{user.name}}</span>
          <a class="btn-logout" href="/signout" title="Sign out"><i class="icon-off"></i> Sign out</a>
        </div>
        <div id="channels">
          <div class="header clearfix">
            <h3>My channels</h3>
            <a href="#add-subscription" class="btn btn-small btn-success btn-subscribe" data-toggle="modal"><i class="icon-plus icon-white"></i> Subscribe to a site</a>
          </div>
          <ul class="nav nav-list list">
            <li class="channel channel-all"><a href="#" data-channel="all">All stories</a></li>
          </ul>
        </div>
      </aside>
    </div>
  </div>
</div>
<!-- MODALS -->
<div class="modal hide" id="add-subscription">
  <div class="modal-header">
    <a href="#" class="close" data-dismiss="modal">Ã—</a>
    <h2>Subscribe to a site</h2>
  </div>
  <div id="subscribe-messages" class="messages modal-messages"></div>
  <div class="modal-body">
    <input type="text" name="url" class="subscribe-url" placeholder="Enter the URL of the website..." />
  </div>
  <div class="modal-footer">
    <a href="#" class="btn btn-primary btn-subscribe">Subscribe</a>
  </div>
</div>
<!-- CONTROLLER -->
<script type="text/javascript">
  require(["/scripts/libraries/pagetty.js", "json!/api/user", "json!/api/user/channels"], function(pagetty, user, channels) {
    $(document).ready(function() {
      pagetty.init(user, channels);
    });
  });
</script>
