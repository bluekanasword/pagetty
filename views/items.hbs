{{#if items}}
  {{#items}}
    <article class="{{new}} {{_id}} load" data-id="{{_id}}" data-stamp="{{stamp_unix}}" data-image="{{image}}">
      <div class="title clearfix">
        <div class="new"></div>
        <span class="thumb"></span>
        <a class="exco expand" href="#" title="Expand"><i class="fa-icon-angle-down"></i></a>
        <a class="exco collapse" href="#" title="Expand"><i class="fa-icon-angle-up"></i></a>
        <h2><a href="{{target}}" target="_blank">{{title}}</a></h2>
        <div class="meta">
          <a class="list-name" href="/list/{{list_id}}">{{list_name}}</a> - <span class="timeago" data-stamp="{{stamp}}"></span>
        </div>
        <div class="actions">
          {{#if score}}<a class="action action-primary" target="_blank" href="{{comments}}"><i class="fa-icon-comments"></i> {{score}}</a>{{/if}}
        </div>
      </div>
      <div class="inner">
        <div class="description">
          {{{description}}}
        </div>
      </div>
    </article>
  {{/items}}
{{else}}
  <div class="no-items">No articles found.</div>
{{/if}}
